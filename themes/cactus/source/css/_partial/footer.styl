#footer
  position: absolute
  bottom: 0
  margin-bottom: 2rem
  width: 100%
  color: $color-meta
  vertical-align: top
  text-align: center
  font-size: 12px

  ul
    margin: 0
    padding: 0
    list-style: none

  li
    display: inline-block
    margin-right: 15px
    border-right: 1px solid $color-border
    vertical-align: middle
    line-height: 12px

    a
      margin-right: 15px

  li:last-child
    margin-right: 0
    border-right: 0

    a
      margin-right: 0

  a
    background-image: none
    color: $color-meta
    // text-decoration: underline

  a:hover
    color: lighten($color-meta, 20%)

  .footer-left
    height: 20px
    vertical-align: middle
    line-height: 20px

@media (min-width: 39rem)
  #footer
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    align-content: center
    margin-bottom: 2rem

    .footer-left
      align-self: flex-start
      margin-right: 20px

    .footer-right
      align-self: flex-end

@media (max-width: 480px)
  #footer
    margin-bottom: 1.5rem
