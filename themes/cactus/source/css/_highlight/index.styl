.highlight
  display: block
  overflow-x: auto
  margin: 0px
  padding: 15px 20px
  font-size: font-size
  font-family: font-mono
  line-height: font-size * line-height

  table
    margin: 0
    width: auto

    td
      border: none

    td.code
      padding-right: 20px

  .gutter
    pre
      padding-right: 20px
      color: #666
      text-align: right

.article-entry
  .highlight
    margin: 1.6em 0

    .line
      height: 1.6em

@import "_highlight/" + highlight